L_PREFIX=/usr/local/include/c

all: build
	@echo "\n+--------------------------------------------------------------+"
	@echo "                            Vector"
	@echo "+--------------------------------------------------------------+"
	make -C vector
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Map"
	@echo "+--------------------------------------------------------------+"
	make -C map
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Queue"
	@echo "+--------------------------------------------------------------+"
	make -C queue
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Stack"
	@echo "+--------------------------------------------------------------+"
	make -C stack
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Ringbuffer"
	@echo "+--------------------------------------------------------------+"
	make -C ringbuffer
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           BinTree"
	@echo "+--------------------------------------------------------------+"
	make -C bintree

build:
	mkdir -p $(L_PREFIX)

install:
	@echo "\n+--------------------------------------------------------------+"
	@echo "                             Debug                                "
	@echo "+--------------------------------------------------------------+"
	cp dbg.h $(L_PREFIX)/dbg.h
	cp colors.h $(L_PREFIX)/colors.h
	@echo "\n+--------------------------------------------------------------+"
	@echo "                            Vector"
	@echo "+--------------------------------------------------------------+"
	make -C vector install
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Map"
	@echo "+--------------------------------------------------------------+"
	make -C map install
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Queue"
	@echo "+--------------------------------------------------------------+"
	make -C queue install
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Stack"
	@echo "+--------------------------------------------------------------+"
	make -C stack install
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Ringbuffer"
	@echo "+--------------------------------------------------------------+"
	make -C ringbuffer install
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Bstrlib 1.0"
	@echo "+--------------------------------------------------------------+"
	cp -R strings $(L_PREFIX)/strings
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           BinTree"
	@echo "+--------------------------------------------------------------+"
	make -C bintree install
clean:
	@echo "\n+--------------------------------------------------------------+"
	@echo "                            Vector"
	@echo "+--------------------------------------------------------------+"
	make -C vector clean
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Map"
	@echo "+--------------------------------------------------------------+"
	make -C map clean
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Queue"
	@echo "+--------------------------------------------------------------+"
	make -C queue clean
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Stack"
	@echo "+--------------------------------------------------------------+"
	make -C stack clean
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           Ringbuffer"
	@echo "+--------------------------------------------------------------+"
	make -C ringbuffer clean
	@echo "\n+--------------------------------------------------------------+"
	@echo "                           BinTree"
	@echo "+--------------------------------------------------------------+"
	make -C bintree clean
